
<%- include("partials/header"); -%>

<div class="container-content">
    <div class="jumbotron" style="background-color: #161a1d;">
    <h1 style="font-family: IBM Plex Sans, sans-serif; font-weight: 700; font-size:
    36px"><%=title%></h1>
   <% var options = { year: 'numeric', month: 'long', day: 'numeric' }; %>
   <p style="font-family: IBM Plex Sans, sans-serif; font-weight:400; font-size: 16px;"><%=date.toLocaleDateString('en-us', options)%></p>

   <div class="share-btn-continer">
    <a href="https://reddit.com/submit?url=http://localhost:3000/posts/<%=_id%>&title=<%=title%>" class="reddit-btn"> <i class="fa-brands fa-reddit fa-2xl"></i></a>
    
    <a href="https://www.linkedin.com/shareArticle?url=http://localhost:3000/posts/<%=_id%>&title=<%=title%>" class="linkedin-btn"><i class="fa-brands fa-linkedin fa-2xl"></i></a>

    <a  href="https://twitter.com/share?url=http://localhost:3000/posts/<%=_id%>&text=<%=title%>"  class="twitter-btn"><i class="fa-brands fa-twitter fa-2xl"></i></a>

    <a href="https://www.facebook.com/sharer.php?u=http://localhost:3000/posts/<%=_id%>" class="facebook-btn"><i class="fa-brands fa-facebook fa-2xl"></i></a>

    <a href="https://api.whatsapp.com/send?text=<%=title%> http://localhost:3000/posts/<%=_id%>" class="whatsapp-btn"><i class="fa-brands fa-whatsapp fa-2xl"></i></a>
</div>

   

    <p  style="font-family: IBM Plex Sans, sans-serif; font-weight:400; font-size: 18px;"><%=description%></p>
    <p><%-content%></p>
</div>  
</div>

<%- include("partials/footer"); -%>
