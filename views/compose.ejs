
<%- include("partials/header"); -%>
<div class="container-content">
    <h1>Compose</h1>
    <form class="" action="/compose" method="post">
      <div class="form-group">
        <label>Title</label>
        <input  class="form-control" type="text" name="postTitle">
        <label>Date</label>
        <input type="date" name="postDate" class="form-control">
        <label>Description</label>
        <input type="text" name="postDescription" class="form-control">
        <label>Post</label>
        <textarea id="aTag" class="form-control" name="postBody" rows="5" cols="30"></textarea>
      </div>
      <button class="btn btn-primary" type="submit" name="button">Publish</button>
    </form>
  </div>
<%- include("partials/footer"); -%>
